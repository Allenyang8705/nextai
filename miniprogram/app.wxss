/* app.wxss */
page {
  background-color: #F5F5F5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

/* 通用容器 */
.container {
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 按钮样式 */
.btn-primary {
  background-color: #4A90E2;
  color: #FFFFFF;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.btn-primary:active {
  background-color: #3A7BC8;
}

.btn-secondary {
  background-color: #F0F0F0;
  color: #333333;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 32rpx;
  border: none;
}

.btn-danger {
  background-color: #FF4D4F;
  color: #FFFFFF;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 32rpx;
  border: none;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
  display: block;
}

.input-box {
  background-color: #F8F8F8;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.input-box:focus {
  border-color: #4A90E2;
  background-color: #FFFFFF;
}

/* 文本样式 */
.text-primary {
  color: #4A90E2;
}

.text-secondary {
  color: #999999;
}

.text-success {
  color: #52C41A;
}

.text-danger {
  color: #FF4D4F;
}

.text-warning {
  color: #FAAD14;
}

/* 分隔线 */
.divider {
  height: 1rpx;
  background-color: #EEEEEE;
  margin: 32rpx 0;
}

/* Loading 样式 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #999999;
  font-size: 28rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  color: #DDDDDD;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}
