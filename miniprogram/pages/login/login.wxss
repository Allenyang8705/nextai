/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #4A90E2 0%, #5BA3F5 100%);
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
}

/* Logo 区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 16rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 表单区域 */
.form-section {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx;
  flex: 1;
}

/* 切换 Tab */
.tab-bar {
  display: flex;
  margin-bottom: 40rpx;
  border-bottom: 2rpx solid #EEEEEE;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  font-size: 32rpx;
  color: #999999;
  position: relative;
}

.tab-item.active {
  color: #4A90E2;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #4A90E2;
  border-radius: 2rpx;
}

/* 输入框 */
.input-group {
  position: relative;
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.input-box {
  width: 100%;
  background-color: #F8F8F8;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.input-box:focus {
  background-color: #FFFFFF;
  border: 2rpx solid #4A90E2;
}

.eye-icon {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  font-size: 40rpx;
  cursor: pointer;
}

/* 表单操作 */
.form-actions {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.remember-text {
  margin-left: 12rpx;
  font-size: 28rpx;
  color: #666666;
}

.agreement {
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.agreement-text {
  margin-left: 12rpx;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}

.link {
  color: #4A90E2;
}

/* 按钮 */
.btn-block {
  width: 100%;
}

/* 底部 */
.footer {
  margin-top: 40rpx;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}
