/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #4A90E2 0%, #5BA3F5 100%);
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
}

/* Logo 区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
  animation: fadeInDown 0.6s ease;
}

.logo-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  animation: pulse 2s ease-in-out infinite;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  letter-spacing: 1rpx;
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

/* 表单区域 */
.form-section {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  flex: 1;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  animation: fadeInUp 0.6s ease 0.2s both;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 切换 Tab */
.tab-bar {
  display: flex;
  margin-bottom: 48rpx;
  border-bottom: 2rpx solid #EEEEEE;
  position: relative;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  font-size: 32rpx;
  color: #999999;
  position: relative;
  transition: all 0.3s ease;
  cursor: pointer;
}

.tab-item.active {
  color: #4A90E2;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #4A90E2;
  border-radius: 2rpx;
  animation: tabSlide 0.3s ease;
}

@keyframes tabSlide {
  from {
    width: 0;
    opacity: 0;
  }
  to {
    width: 60rpx;
    opacity: 1;
  }
}

/* 输入框 */
.input-group {
  position: relative;
  margin-bottom: 40rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-box {
  width: 100%;
  height: 88rpx;
  background-color: #F8F8F8;
  border: 2rpx solid #E8E8E8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333333;
  box-sizing: border-box;
  line-height: 88rpx;
  transition: all 0.3s ease;
}

.input-box:focus {
  background-color: #FFFFFF;
  border-color: #4A90E2;
  box-shadow: 0 0 0 4rpx rgba(74, 144, 226, 0.1);
}

.input-placeholder {
  color: #AAAAAA;
  font-size: 30rpx;
}

.eye-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 40rpx;
  cursor: pointer;
  z-index: 10;
  padding: 10rpx;
}

/* 表单操作 */
.form-actions {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.remember-text {
  margin-left: 12rpx;
  font-size: 28rpx;
  color: #666666;
}

.agreement {
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.agreement-text {
  margin-left: 12rpx;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}

.link {
  color: #4A90E2;
}

/* 按钮 */
.btn-block {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 24rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.btn-block:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.3);
}

.btn-block[disabled] {
  opacity: 0.5;
  box-shadow: none;
}

/* 底部 */
.footer {
  margin-top: 40rpx;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}
