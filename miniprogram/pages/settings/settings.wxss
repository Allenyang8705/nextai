/* pages/settings/settings.wxss */
.settings-container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 40rpx;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #4A90E2 0%, #5BA3F5 100%);
  margin: 20rpx;
  margin-bottom: 32rpx;
  padding: 40rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 226, 0.3);
}

.user-avatar-container {
  position: relative;
  margin-right: 24rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  font-size: 60rpx;
}

.user-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 设置列表 */
.settings-list {
  padding: 0 20rpx;
}

.settings-group {
  margin-bottom: 32rpx;
}

.group-title {
  font-size: 26rpx;
  color: #999999;
  padding: 16rpx 8rpx;
}

.settings-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #FFFFFF;
  padding: 28rpx 24rpx;
  border-radius: 12rpx;
  margin-bottom: 2rpx;
}

.item-left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.item-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.item-label {
  font-size: 32rpx;
  color: #333333;
}

.item-label-column {
  display: flex;
  flex-direction: column;
}

.item-desc {
  font-size: 26rpx;
  color: #999999;
  margin-top: 4rpx;
}

.item-right {
  display: flex;
  align-items: center;
}

.item-arrow {
  font-size: 48rpx;
  color: #CCCCCC;
  margin-left: 16rpx;
}

.picker-value {
  font-size: 28rpx;
  color: #4A90E2;
}

/* 状态徽章 */
.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.status-badge.success {
  background-color: rgba(82, 196, 26, 0.1);
  color: #52C41A;
}

.status-badge.error {
  background-color: rgba(255, 77, 79, 0.1);
  color: #FF4D4F;
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 32rpx;
}

.input-group {
  margin-bottom: 24rpx;
}

.modal-input {
  width: 100%;
  background-color: #F8F8F8;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 32rpx;
}

.modal-actions button {
  flex: 1;
}

/* 按钮 */
.btn-primary {
  background-color: #4A90E2;
  color: #FFFFFF;
  border-radius: 12rpx;
  padding: 24rpx;
  border: none;
  font-size: 32rpx;
}

.btn-secondary {
  background-color: #F0F0F0;
  color: #333333;
  border-radius: 12rpx;
  padding: 24rpx;
  border: none;
  font-size: 32rpx;
}
